<controls:MetroWindow x:Class="RepeatAndLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepeatAndLearn"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Repeat And Learn" Height="450" Width="800"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button Content="settings" Command="{Binding ApiExecuteCommand}"/>
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions> 

        <TextBox  controls:TextBoxHelper.Watermark="Wpisz tekst do przetłumaczenia.." controls:TextBoxHelper.ClearTextButton="True" />
        <Button Content="Szukaj" Grid.Column="1"  Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"></Button>

    </Grid>
</controls:MetroWindow>

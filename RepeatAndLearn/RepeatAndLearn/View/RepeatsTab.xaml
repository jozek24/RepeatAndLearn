<UserControl x:Class="RepeatAndLearn.View.RepeatsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RepeatAndLearn.View"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Row="0" Grid.Column="0" Header="">

                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding WordToCheck}" 
                              controls:TextBoxHelper.ClearTextButton="True">
                </TextBlock>
            </GroupBox>
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Odpowiedź">
                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding TranslatedWord, Mode=OneWayToSource}"></TextBox>
            </GroupBox>

            <StackPanel Grid.Row="1" Grid.Column="1" 
                                Orientation="Vertical">
            <Border BorderThickness="3"/>
            <Button Command="{Binding CheckAnswerCommand}"
                                IsEnabled="{Binding CanAddNewWord}"
                                MinHeight="40" MinWidth="40"
                                Content="{iconPacks:Modern question}"
                                Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" 
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border BorderThickness="3"></Border>
                <Button Command="{Binding DeleteTranslatedWordCommand}"
                                IsEnabled="{Binding CanDeleteWord}"
                                MinHeight="40" MinWidth="40"
                                Content="{iconPacks:Modern Minus}"
                                Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" 
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                                Command="{Binding MyAnswerWrongCommand}"
                                Content="1"
                                Background="Red"
                                FontSize="15"
                                Margin="2"
                                />
                <Button Grid.Column="1" 
                                Command="{Binding MyAnswerCorrectCommand}"
                                Content="2"
                                Background="Green"
                                FontSize="15"
                                Margin="2"/>
            </Grid>
        </Grid>
</UserControl>
